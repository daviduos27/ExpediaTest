{
  "name": "booking-com-automation",
  "version": "1.0.0",
  "description": "Playwright and TypeScript automation for Booking.com",
  "main": "index.js",
  "scripts": {
    "test": "npx playwright test",
    "report:html": "npx playwright show-report",
    "report:allure:generate": "npx allure generate allure-results --clean -o allure-report",
    "report:allure:open": "npx allure open allure-report"
  },
  "keywords": [
    "playwright",
    "typescript",
    "automation",
    "testing",
    "e2e"
  ],
  "author": "Nelson Duarte",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.51.1",
    "@types/node": "^22.13.10",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.1",
    "allure-playwright": "^2.13.0",
    "allure-commandline": "^2.26.0"
  },
  "engines": {
    "node": ">=18"
  }
}